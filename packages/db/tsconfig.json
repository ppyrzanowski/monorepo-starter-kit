{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "ES6",                      
    "module": "commonjs",                 
    "strict": true,                       
    "esModuleInterop": true,              
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                            
    "baseUrl": ".",     
    "paths": {}                                                                
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"],
}