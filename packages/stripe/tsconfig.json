{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "baseUrl": ".",
  "paths": {
    "config": ["../config/src/*"],
    "db": ["../db/src/*"]
  },
  "references": [
    { "path": "../config" },
    { "path": "../db" }
  ]
}

